<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <!-- Adding the correct Bootstrap link for version 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container w-75 mt-5">
        <div class="card shadow p-4">
            <h1 class="text-center mb-4">To-Do List</h1>
    
            <!-- Form for adding tasks (using grid system) -->
            <form action="/add" method="POST" class="row mb-3">
                <div class="col-6">
                    <input type="hidden" value="<%= Date.now() %>" name="id">
                    <input type="text" name="task" class="form-control" placeholder="Enter a new task" required>
                </div>
                <div class="col-6 col-md-4">
                    <button type="submit" class="btn btn-primary ">Add Task</button>
                </div>
            </form>
    
            <!-- List of tasks (using grid system) -->
            <ul class="list-group mt-4">
                <% tasks.forEach(function(task) { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <%= task.task %>
                        <div>
                            <a href="/delete/?id=<%= task.id %>" class="btn btn-danger btn-sm me-2">Delete</a>
                            <a href="/edit?id=<%= task.id %>" class="btn btn-success btn-sm">Edit</a>
                        </div>
                    </li>
                <% }); %>
            </ul>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>    
</html>
